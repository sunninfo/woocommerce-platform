<section class="cart py-16">
<% if (session.cart) { %>

    <div class="order conatainer mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="cart-black">
            <h1 class="font-bold ml-4 text-2xl">Order Summry</h1>
        </div>

        <!-- added product wrapper -->
        <div class="pizza-list">
        <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="pizza">

                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.item.qty %>Pcs</span>
                <span class="font-bold text-lg">Rs.<%= pizza.item.price * pizza.qty %></span>
            </div>
            <% } %>

            <hr>

            <!-- total order section -->
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Ammount</span>
                    <span class="ammount text-2xl font-bold ml-2">Rs.<%= session.cart.totalPrice%></span>
                </div>

                <!-- form section -->
                <div>
                    <form action="" class="mt-12">
                        <input class="border border-gray-400 outline-none p-2 w-1/2 mb-4" type="text" placeholder="PhoneNumber">
                        <input class="border outline-none border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                        <div>
                            <button class="outline-none btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
                                type="submit">Order Now</button>
                        </div>
                    </form>

                </div>
                <!-- form section -->
                <!-- <a href="" class="inline-block cursor-pointer  px-6 py-2 btn-primary rounded-full text-white font-bold mt-6">Login to continue</a> -->
            </div>
            <!-- total order section -->

        </div>
        <!-- added product wrapper -->
    </div>
    <% } else { %>


    <div class="emty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 ">Cart empty</h1>
            <p class="text-gray-400 text-lg mb-12">You probably haven't ordered anything yet.<br /> To order somthing go to
                the main page!</p>
            <img class="w-2/5 mx-auto" src="img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
        </div>
    </div>

    <% } %>
</section>